[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "Óà§ "
format-prefix-foreground = ${colors.secondary}
label = %percentage%%

[module/memory]
type = custom/script
exec = free -m |awk '/^Mem/ {printf("%u%%",100*$3/$2);}'
interval = 2
format =  <label>
format-prefix = "ÓÄ° "
format-prefix-foreground = ${colors.secondary}

[module/date]
type = custom/script
exec =  date +%a\ %d/%m/%y|sed -E 's/\S+/\u&/'
format = %{A1:calendar:} <label> %{A}
format-prefix = "Óáç "
format-prefix-foreground = ${colors.secondary}
click-left="./calendar.sh"

[module/clock]
type = custom/script
exec = date +%H:%M:%S
interval = 1
format = <label>
format-prefix = "ÔÄó "
format-prefix-foreground = ${colors.secondary}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

ramp-0 = ÓÉâ
ramp-1 = ÓÉä
ramp-2 = ÓÉã
ramp-foreground = ${colors.foreground-alt}

