[module/coretemps]
type = custom/script
exec-if = sensors
exec = sensors|awk '/Core/{print substr($3, 2, length($3)-5)}'|awk '{if (match($0,/[0-9]+/,m)) print m[0]"¬∞C"}'|tr '\n' ' '
format =  <label>
format-prefix = "ÓÄ¶ "
format-prefix-foreground = ${colors.secondary}

[module/filesystem]
type = custom/script
exec =  df -h / | awk 'NR==2 {print $5}'
format =  <label>
format-prefix = "ÓÄ´ "
format-prefix-foreground = ${colors.secondary}

[module/hddtemp]
type = custom/script
exec = nc localhost 7634 | awk -F'|' '{print $4"¬∞C",$9"¬∞C"}'
format =  <label>
format-prefix = "ÓÜª "
format-prefix-foreground = ${colors.secondary}

[module/fanspeed]
type = custom/script
exec-if = sensors
exec = sensors | awk '/Fan/{print $3,$4}'
format = <label>
format-prefix = "ÓÄß "
format-prefix-foreground = ${colors.secondary}


